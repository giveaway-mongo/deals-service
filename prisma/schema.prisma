// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type UserType {
  firstName   String
  lastName    String
  phoneNumber String?
}

type Bid {
  userId String @db.ObjectId
  bid    String
  order  String
}

type Review {
  userId String @db.ObjectId
  review String
}

type CategoryType {
  guid        String @db.ObjectId
  title       String
  description String
  parentId    String
}

model User {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  guid        String
  firstName   String
  lastName    String
  phoneNumber String?
}

model Category {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  guid        String @db.ObjectId
  title       String
  description String
  parentId    String
}

model Deal {
  id            String       @id @default(auto()) @map("_id") @db.ObjectId
  guid          String       @unique
  title         String
  description   String
  contactMethod String
  activeUntil   String
  type          String
  status        String
  owner         UserType
  bids          Bid[]
  reviews       Review[]
  reportedBy    UserType
  category      CategoryType
  photos        String[]
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
}
