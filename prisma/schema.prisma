// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type UserType {
  guid          String
  fullName      String
  email         String
  phoneNumber   String?
  bidsAvailable Int
  isActive      Boolean?
  isDeleted     Boolean?
  role          String
  avatarUrl     String
}

type Bid {
  userGuid String
  bid      String
  order    String
}

type Review {
  userGuid String
  review   String
}

type CategoryType {
  guid        String
  title       String
  description String
  parentGuid  String?
}

model User {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  guid          String   @unique
  email         String
  fullName      String
  avatarUrl     String
  phoneNumber   String?
  role          String
  bidsAvailable Int  @default(0)
  isActive      Boolean? @default(true)
  isDeleted     Boolean? @default(false)
}

model Category {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  guid        String @unique
  title       String
  description String
  parentGuid  String?
}

model Deal {
  id            String       @id @default(auto()) @map("_id") @db.ObjectId
  guid          String       @unique
  title         String
  description   String
  contactMethod String
  activeUntil   String
  type          String
  status        String
  author        UserType
  buyer         UserType?
  bids          Bid[]
  reviews       Review[]
  reportedBy    UserType[]
  category      CategoryType
  photos        String[]
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
}
